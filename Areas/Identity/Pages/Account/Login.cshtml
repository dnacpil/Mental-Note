@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="mh-100" id="lr-view">
    <div class="row">
        <div class="col-lg-7">
            <div>
                <img src="~/images/Logo1.jpg" alt="App Logo" id="login-image" />
            </div>
        </div>
        <div class="col-lg-5">
            <div id="login-container">
                <div class="my-2">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <form id="account" method="post">
                    @* <hr /> *@
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating my-2">
                        <input asp-for="Input.Email" class="form-control" id="lr-input" autocomplete="username"
                            aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating my-2">
                        <input asp-for="Input.Password" class="form-control" id="lr-input" autocomplete="current-password"
                            aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox my-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="my-2">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="my-2">
                        <p class="text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot the password?</a>
                        </p>
                        <p class="text-center">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Need an account? Sign up</a>
                        </p>
                        @* <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p> *@
                    </div>
                </form>
            </div>
        </div>
