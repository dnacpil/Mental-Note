@page
@model RegisterModel
@{
   ViewData["Title"] = "Register";
}


<div class="lr-views">
   <div class="row">
       <div class="col-4"></div>
       <div class="col-lg-4">
           <div class="lr-forms-container">
                   <h2 class="text-center my-3">Register</h2>
                    <hr/>
               <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                   <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                   <div class="form-floating my-2">
                       <input asp-for="Input.Email" class="form-control lr-input" autocomplete="username" aria-required="true"
                           placeholder="name@example.com" />
                       <label asp-for="Input.Email">Email</label>
                       <span asp-validation-for="Input.Email" class="text-danger"></span>
                   </div>
                   <div class="form-floating my-2">
                       <input asp-for="Input.Password" class="form-control lr-input" autocomplete="new-password"
                           aria-required="true" placeholder="password" />
                       <label asp-for="Input.Password">Password</label>
                       <span asp-validation-for="Input.Password" class="text-danger"></span>
                   </div>
                   <div class="form-floating my-2">
                       <input asp-for="Input.ConfirmPassword" class="form-control lr-input" autocomplete="new-password"
                           aria-required="true" placeholder="password" />
                       <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                       <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                   </div>
                   <div class="my-1 text-center">
                       <button id="registerSubmit" type="submit" class="lr-btn">Register</button>
                   </div>
                   <hr/>
                   <div class="my-2 text-center">
                           <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account? Head
                               back to the login page</a>
                   </div>
               </form>
           </div>
       </div>
       <div class="col-4"></div>
   </div>
