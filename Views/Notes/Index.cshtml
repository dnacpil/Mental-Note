@model IEnumerable<Notes>

@{
    ViewData["Title"] = "Notes";
}
<div class="notes-page">
    <section class="d-inline-flex align-items-center" id="n-i-first-section">
        <div class="ms-3">
            <h1 class="fw-light">NOTES</h1>
        </div>
    </section>
    <section id="n-btn-section">
        <div class="row">
            <div class="col-12 col-md-8"></div>
            <div class="col-6 col-md-4">
                <a asp-controller="Notes" asp-action="Create" class="btn jn-create-btn">
                    <i class="bi bi-plus-circle me-2"></i>Create a new note
                </a>
            </div>
        </div>
    </section>
    <section id="n-i-cards">
        <div class="row">
            @if (TempData["empty"] != null)
            {
                <h2>@TempData["empty"]</h2>
            }
            @foreach (var obj in Model)
            {
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <div class="card bg-transparent border-light mb-3 ">
                        <div class="card-body">
                            <h5 class="card-title">@obj.Title</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">@obj.NoteDate</h6>
                            <a class="card-link" asp-action="Content" asp-route-id="@obj.NoteID">Read</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
