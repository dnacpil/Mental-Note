@model Notes
<div id="notes-page">
    <div class="container-fluid">
        <form method="POST" asp-route-id="@Model.NoteID asp-action=" PostDelete">
            <input type=" hidden" asp-for="NoteID" />
            <div asp-validation-summary="All"></div>
            <div class="text-justify">
                <h1>Delete Note</h1>
            </div>
            <div class="row justify-content-start my-3">
                <div class="col-lg-12">
                    <label asp-for="Title" class="form-labe n-labell">Title</label>
                    <input asp-for="Title" class="form-control n-input" disabled/>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <button type="submit" class="btn btn n-form-btn">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Notes" asp-action="Index" class="btn btn-outline-primary border  form-control">
                        Back to main
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>