@model Notes;
<div class="notes-page">
    <section class="n-ced-section">
        <form method="POST" asp-route-id=@Model.NoteID asp-action="PostEdit" id="">
            <input type="hidden" asp-for="NoteID" />
            <div asp-validation-summary="All"></div>
            <div class="text-justify">
                <h1>Edit Notes</h1>
            </div>
            <div class="row justify-content-start my-3">
                <div class="col-lg-6">
                    <label asp-for="Title" class="form-label n-label">Title</label>
                    <input asp-for="Title" class="form-control n-input" placeholder="Edit title" />
                </div>
            </div>
            <div class="row justify-content-start my-3">
                <div class="col-lg-6">
                    <label asp-for="Note"  n-label>Notes</label>
                    <input asp-for="Note" class="form-control n-input" placeholder="Edit content" style="min-height: 150px;" />
                </div>
            </div>
            <div class="row justify-content-start my-3">
                <div class="col-lg-6">
                    <label asp-for="Exercises"  n-label>Edit Exercises</label>
                    <input asp-for="Exercises" class="form-control n-input" placeholder="Edit exercises"
                        style="min-height: 150px;" />

                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <button type="submit" class="btn n-form-btn">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="JournalEntry" asp-action="Index"
                        class="btn form-control">
                        Back to main
                    </a>
                </div>
            </div>
        </form>
    </section>
</div>
