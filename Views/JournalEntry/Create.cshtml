@model JournalEntry;
<div id="je-page">
    <div class="container-fluid"></div>
    <div class="m-1 p-2" id="je-create-form">
        <form method="POST" asp-action="Create">
            <div asp-validation-summary="All"></div>

            <div class="row justify-content-start my-3">
                <div class="col-lg-6">
                    <label asp-for="Title" class="form-label py-1" id="je-label">Title</label>
                    <input asp-for="Title" class="form-control py-1" id="je-input" placeholder="Add a title" style="min-height: 50px;" />
                </div>
            </div>
            <div class="row justify-content-start my-3">
                <div class="col-lg-6">
                    <label asp-for="JournalContent" class="form-label py-1" id="je-label">Journal Entry</label>
                    <input asp-for="JournalContent" class="form-control py-1" id="je-input"
                        placeholder="Write about your thoughts, feelings, ideas..." style="min-height: 300px;" />
                </div>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn form-control" id="je-create-btn">Add</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="JournalEntry" asp-action="Index" class="btn form-control">
                        Back to main
                    </a>
                </div>
            </div>
        </form>
    </div>
    </div>
</div>