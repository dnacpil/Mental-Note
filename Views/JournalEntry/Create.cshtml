@model JournalEntry;

<form method="POST" id="createEditForm" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All"></div>
        <div class="form-floating py-2">
            <input asp-for="Title" class="form-control border-0 shadow" />
            <label asp-for="Title" class="ms-2">Title</label>

        </div>
        <div class="form-floating py-2 col-12">
            <textarea asp-for="JournalContent" class="form-control border-0 shadow"></textarea>
            <label asp-for="JournalContent" class="ms-2">Journal Entry</label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Tags" class="form-control border-0 shadow" />
            <label asp-for="Tags" class="ms-2">Add tags</label>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Add</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                    Back to homepage
                </a>
            </div>
</form>