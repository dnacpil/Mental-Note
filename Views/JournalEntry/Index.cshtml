@model IEnumerable<JournalEntry>
@{
    ViewData["Title"] = "Journal Entries";
}
<div class="je-ced-views">
    <section class="d-inline-flex align-items-center" id="je-i-first-section">
        <div class="ms-3">
            <h1 class="fw-light">JOURNAL ENTRIES</h2>
        </div>
    </section>
    <section id="je-btn-section">
        <div class="d-flex justify-content-end">
                <a asp-controller="JournalEntry" asp-action="Create" class="btn jn-create-btn">
                    <i class="bi bi-journal-plus m-1"></i> Add a New Entry
                </a>
            </div>
    </section>
    <section id="je-i-table-section">
        <div class="container-fluid">
            <table class="table table-striped table-borderless">
                <thead>
                    <tr>
                        <th scope="col" id="je-th">
                            Date
                        </th>
                        <th scope="col" id="je-th">
                            Title
                        </th>
                        <th scope="col" id="je-th">Actions</th>
                    </tr>
                <tbody class="table-group-divider justify-content-center~" id="je-tbody">
                    @foreach (var obj in Model)
                        {
                        <tr>
                            <td>@obj.EntryDate</td>
                                @*.ToString("dd/MM/yyyy")*@
                            <td>@obj.Title</td>
                            <td>
                                <a class="text-muted m-1" asp-action="Content" asp-route-id="@obj.JournalEntryID"
                                    data-bs-toggle="modal" data-bs-target="#content-modal">
                                    <i class="bi bi-book"></i></a>
                                <div class="modal fade" id="content-modal" tabindex="-1" aria-labelledby="contentModalLabel"
                                    aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-scrollable">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div asp-route-id="@obj.JournalEntryID class=" modal-body">
                                                <div class="container">
                                                    <div class="row align-items-center">
                                                        <div class="col-6">
                                                            <p>@obj.JournalContent</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a class="text-muted m-1" asp-action="Edit" asp-route-id="@obj.JournalEntryID"><i
                                        class="bi bi-pen"></i></a>
                                <a class="text-muted m-1" asp-action="Delete" asp-route-id="@obj.JournalEntryID"><i
                                        class="bi bi-trash3"></i></a>
                            </td>
                        </tr>
                        }
                </tbody>
            </table>
        </div>
    </section>
</div>