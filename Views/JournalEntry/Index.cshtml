@model IEnumerable<JournalEntry>
@{
    ViewData["Title"] = "Journal Entries";
}
<div>
    <h2>Journal Entries</h2>
</div>


<div class="container">

    <table class="table table-striped">

        <thead>
            <tr>
                <th scope="col">
                    Title
                </th>
                <th scope="col">
                    Date
                </th>
                <th>
                    <a asp-controller="JournalEntry" asp-action="Create">
                        <i class="bi bi-plus-circle me-2"></i> New Entry
                    </a>
                </th>
                @* <th>
                <a asp-action="Index"
                asp-route-sortOrder="@ViewData["DescriptionSortParm"]">@Html.DisplayNameFor(model =>
                model.Title) <i class="bi bi-arrow-down-square"></i></a>
                </th>
                <th>
                <a asp-action="Index"
                asp-route-sortOrder="@ViewData["DescriptionSortParm"]">@Html.DisplayNameFor(model =>
                model.EntryDate) <i class="bi bi-arrow-down-square"></i></a>
                </th> *@
            </tr>
        <tbody class="table-group-divider">
            @foreach (var obj in Model)
                {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.EntryDate</td>
                    <td>

                        <a class="edit" asp-action="Content" asp-route-id="@obj.JournalEntryID" data-bs-toggle="modal"
                            data-bs-target="#content-modal">
                            <i class="bi bi-book"></i></a>
                        <div class="modal fade" id="content-modal" tabindex="-1" aria-labelledby="contentModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="content-modal">Modal title</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="container">
                                            <div class="row align-items-center">
                                                <div class="col-6">
                                                    <p>@obj.JournalContent</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a class="edit" asp-action="Edit" asp-route-id="@obj.JournalEntryID"><i
                                class="bi bi-pen-fill"></i></a>
                        <a class="delete" asp-action="Delete" asp-route-id="@obj.JournalEntryID"><i
                                class="bi bi-trash3-fill"></i></a>

                    </td>
                </tr>
                }
        </tbody>
</div>
