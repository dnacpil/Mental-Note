@model IEnumerable<JournalEntry>
@{
    ViewData["Title"] = "Journal Entries";
}
<div class="je-ced-views">
    <section class="d-inline-flex align-items-center" id="je-i-first-section">
        <div class="ms-3">
            <h1 class="fw-light">JOURNAL ENTRIES</h2>
        </div>
    </section>
    <section id="je-btn-section">
        <div class="d-flex flex-row-reverse">
            <a asp-controller="JournalEntry" asp-action="Create" class="btn me-2 je-btn">
                <i class="bi bi-journal-plus m-1"></i> Add a New Entry
            </a>
        </div>
    </section>
    <section id="je-i-table-section">
        <div class="container">
            <table class="table table-striped table-borderless">
                <thead>
                    <tr>
                        <th scope="col" id="je-th"><a asp-action="Index"
                                asp-route-sortOrder="@ViewData["DateSortParm"]"><i
                                    class="bi bi-sort-numeric-up"></i></a>
                            Date
                        </th>
                        <th scope="col" id="je-th">
                            Title
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                                <i class="bi bi-sort-alpha-up mx-2"></i></a>
                        </th>
                        <th scope="col" id="je-th">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider justify-content-center~" id="je-tbody">

                        @foreach (var obj in Model)
                        {
                        <tr>
                            <td>@obj.EntryDate</td>
                                @**@
                            <td>@obj.Title</td>
                            <td>
                                <a class="text-muted m-1" asp-action="Content" asp-route-id="@obj.JournalEntryID">
                                    <i class="bi bi-book"></i></a>
                                <a class="text-muted m-1" asp-action="Edit" asp-route-id="@obj.JournalEntryID"><i
                                        class="bi bi-pen"></i></a>
                                <a class="text-muted m-1" asp-action="Delete" asp-route-id="@obj.JournalEntryID"><i
                                        class="bi bi-trash3"></i></a>
                            </td>
                        </tr>
                        }
                </tbody>
            </table>
            @if (TempData["empty"] != null)
                        {
                        <div class="text-center empty-message-container">
                            <h3>@TempData["empty"]</h3>
                        </div>
                        }
        </div>
    </section>
</div>