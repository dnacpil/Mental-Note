@model JournalEntry;
<div id="je-page">
    <div class="je-ced-views p-2">
        <div class="text-justify ms-5 mt-2 p-2">
            <h2>Edit Journal Entry</h1>
        </div>
        <form method="POST" asp-route-id="@Model.JournalEntryID" asp-action="PostEdit">
            <input type="hidden" asp-for="JournalEntryID" />
            <div asp-validation-summary="All"></div>
            <div class="row justify-content ms-5">
                <div class="col-lg-6">
                    <label asp-for="Title" class="form-label" id="je-label">Title</label>
                    <input asp-for="Title" class="form-control" id="je-input" placeholder="Edit title"
                        style="min-height: 50px;" />
                </div>
            </div>
            <div class="row justify-content ms-5 mt-1">
                <div class="col-lg-8">
                    <label asp-for="JournalContent" class="form-label" id="je-label">Journal Entry</label>
                    <input asp-for="JournalContent" class="form-control" id="je-input" placeholder="Edit content"
                        style="min-height: 300px;" />
                </div>
            </div>
            <div class="row justify-content ms-5 mt-5">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn form-control" id="">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="JournalEntry" asp-action="Index"
                        class="btn form-control">
                        Back to main
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>