@model JournalEntry;
<div class="je-ced-views p-2">
    <section class="d-inline-flex align-items-center w-100">
            <h2 class="je-ed-title ms-3">EDIT JOURNAL ENTRY</h1>
    </section>
    <section class="d-inline-flex align-items-center breadcrumb-section je-ced-views">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Journalentry" asp-action="Index">Journal Entries</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
        </nav>
    </section>
    <section class="je-ced-section">
        <div class="je-forms">
            <form method="POST" asp-route-id="@Model.JournalEntryID" asp-action="PostEdit">
                <input type="hidden" asp-for="JournalEntryID" />
                <div asp-validation-summary="All"></div>
                <div class="row align-items-center">
                    <label asp-for="Title" class="form-label py-1" id="je-label">Title</label>
                    <input asp-for="Title" class="form-control" id="je-input" placeholder="Edit title"
                        style="min-height: 50px;" />
                </div>
                <div class="row align-items-center">
                    <label asp-for="JournalContent" class="form-label py-1" id="je-label">Journal Entry</label>
                    <input asp-for="JournalContent" class="form-control" id="je-input" placeholder="Edit content"
                        style="min-height: 300px;" />
                </div>
                <div class="row align-items-center">
                    <div class="text-center my-3">
                        <button type="submit" class="btn form-control jn-btn">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>