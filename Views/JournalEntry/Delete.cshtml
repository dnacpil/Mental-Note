@model JournalEntry
<div class="je-ced-views">
    <section class="d-inline-flex align-items-center">
        <h2 class="je-ed-title ms-3">Delete Entry</h1>
    </section>
    <section class="d-inline-flex align-items-center breadcrumb-section je-ced-views">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Journalentry" asp-action="Index">Journal
                        Entries</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
    </section>

    <section class="je-ced-section">
        <div class="je-forms">
            <form method="post" asp-route-id="@Model.JournalEntryID action=" PostDelete">
                <input type="hidden" asp-for="JournalEntryID" />
                <div asp-validation-summary="All"></div>
                <div class="row align-items-center">
                    <label asp-for="Title" class="form-label py-1">Title</label>
                    <input asp-for="Title" class="form-control" id="je-input" disabled/>
                </div>
                <div class="row align-items-center">
                    <div class="text-center my-3">
                        <button type="submit" class="btn form-control jn-btn">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
